    ID, NAME_LOGIN, EMAIL, PWD_LOGIN, USER_TYPE, PHONE, TIME_CREATE, TIME_LAST_LOGIN,
    TIME_LAST_LOGOUT, PWD_REST, IS_AUTH, IS_LOCKED
  </sql>
