    <where>
      1=1
      <if test="id != null and id != ''" >
        and id = #{id,jdbcType=INTEGER}
      </if>
      <if test="nameLogin != null and nameLogin != ''" >
        and NAME_LOGIN = #{nameLogin,jdbcType=VARCHAR}
      </if>
      <if test="email != null and email != ''" >
        and EMAIL=#{email,jdbcType=VARCHAR}
      </if>
    </where>
